!!! 5
%html
  %head
    %title SCVSheriff
    %link{:rel => "stylesheet", :href => "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{:style => 'padding-top: 40px;'}
    = render 'layouts/nav'
    .container-fluid
      .sidebar
      .content{:style => 'padding-top: 10px'}
        - if flash[:notice]
          .div{:class => 'alert-message success fade in', 'data-alert' => 'alert'}
            %a.close{:href => '#'} x
            %p
              %strong
                = notice
        - if flash[:alert]
          .div{:class => 'alert-message info fade in', 'data-alert' => 'alert'}
            %a.close{:href => '#'} x
            %p
              %strong
                = alert

        = yield

    %footer.footer
      .container
        %p.pull-right
          %a{:href => "#"} Back to top
        %p
          = image_tag 'city_seal_footer.png'
          = image_tag 'LASD_Logo.gif'
        %p
