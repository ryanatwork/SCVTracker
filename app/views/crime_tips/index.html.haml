%h1 Listing Crime Tips

%table
  %tr
    %th Tip Number
    %th Date rec
    %th Crime
    %th Street number
    %th Street name
    %th Cross street
    %th Suspect Name
    %th Team
    %th
    %th
    %th

  - @crime_tips.each do |crime_tip|
    %tr
      %td Tip Number
      %td= crime_tip.date_rec
      %td= crime_tip.crime_id
      %td= crime_tip.street_number
      %td= crime_tip.street_name
      %td= crime_tip.cross_street
      %td= crime_tip.suspect_first_name + ' ' + crime_tip.suspect_last_name
      %td= crime_tip.team_id
      %td= link_to 'Show', crime_tip
      %td= link_to 'Edit', edit_crime_tip_path(crime_tip)
      %td= link_to 'Destroy', crime_tip, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Crime tip', new_crime_tip_path
