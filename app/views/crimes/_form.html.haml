= form_for @crime do |f|
  -if @crime.errors.any?
    #error_explanation
      %h2= "#{pluralize(@crime.errors.count, "error")} prohibited this crime from being saved:"
      %ul
        - @crime.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
