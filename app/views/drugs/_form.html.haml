= form_for @drug do |f|
  -if @drug.errors.any?
    #error_explanation
      %h2= "#{pluralize(@drug.errors.count, "error")} prohibited this drug from being saved:"
      %ul
        - @drug.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
